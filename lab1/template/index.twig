{% extends  'base.twig' %}

{% block body %}
    <main id="main-holder">
        <h1 id="login-header">Добавление пользователя</h1>

        <form id="login-form" action="../index.php" method="post">
            <input type="text" name="id" id="id-field" class="login-form-field" placeholder="ID">
            <input type="text" name="username" id="username-field" class="login-form-field" placeholder="Имя">
            <input type="text" name="email" id="email-field" class="login-form-field" placeholder="Почта">
            <input type="password" name="password" id="password-field" class="login-form-field" placeholder="Пароль">
            <input type="comment" name="comment" id="comment-field" class="login-form-field" placeholder="Комментарий">
            <input type="submit" value="Добавить" name="login" id="login-form-submit">
        </form>
    </main>

{% endblock %}